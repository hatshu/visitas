@model CatecVisitas.Pages.Visitantes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Person.Id" />
            <div class="form-group">
                <label asp-for="Person.Nombre" class="control-label"></label>
                <input asp-for="Person.Nombre" class="form-control" />
                <span asp-val
                      ation-for="Person.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Apellidos" class="control-label"></label>
                <input asp-for="Person.Apellidos" class="form-control" />
                <span asp-validation-for="Person.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.DNI" class="control-label"></label>
                <input asp-for="Person.DNI" class="form-control" />
                <span asp-validation-for="Person.DNI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Empresa" class="control-label"></label>
                <input asp-for="Person.Empresa" class="form-control" />
                <span asp-validation-for="Person.Empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.FechaAlta" class="control-label"></label>
                <input asp-for="Person.FechaAlta" class="form-control" />
                <span asp-validation-for="Person.FechaAlta" class="text-danger"></span>
            </div>
            @*//TODO: CAMBIAR ESTE BOTON*@
            <div class="form-group">
                <button type="submit">
                    <span class="glyphicon glyphicon-floppy-save"> </span>Guardar
                </button>
            </div>
        </form>
    </div>
</div>

