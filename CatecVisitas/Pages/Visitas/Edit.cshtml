@page
@model CatecVisitas.Pages.Visitas.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container">

    <h2>Editar</h2>

    <h4>Visita</h4>
    <hr />

    <div class="panel panel-default">
        <div class=panel-body>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                <div class="form-group">
                    <label asp-for="Visita.FechaVisita" class="control-label"></label>
                    <input asp-for="Visita.FechaVisita" class="form-control" />
                    <span asp-validation-for="Visita.FechaVisita" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Visita.Hora" class="control-label"></label>
                    <input asp-for="Visita.Hora" class="form-control" />
                    <span asp-validation-for="Visita.Hora" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Visita.Motivo" class="control-label"></label>
                    <input asp-for="Visita.Motivo" class="form-control" />
                    <span asp-validation-for="Visita.Motivo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Visita.Duracion" class="control-label"></label>
                    <input asp-for="Visita.Duracion" class="form-control" />
                    <span asp-validation-for="Visita.Duracion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Visita.ResponsableCatec" class="control-label"></label>
                    <input asp-for="Visita.ResponsableCatec" class="form-control" />
                    <span asp-validation-for="Visita.ResponsableCatec" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit">
                        <span class="glyphicon glyphicon-floppy-save"> SAVE</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Volver</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
